generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @unique @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  cpf       String   @unique
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Books {
  id Int @id @unique @default(autoincrement())
  title String @unique
  author String
  description String
  imgUrl String
  value Int
}